<%= render 'shared/highlighted_nurse_task_card', patient: @active_task.task_template.patient, nurse_task: @active_task %>
<div class="main-container mt-0">
  <ul class="nav nav-pills mb-3 d-flex justify-content-center" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">To do</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Completed</a>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      <div class="row nurse-task-cards mt-3">
        <div class="col-6 text-center">
        <p>Morning</p>
        <p>Morning - Time needed: <%= @incomplete_morning_tasks.map{|nurse_task| nurse_task.task_template.task.duration}.reduce(:+) || 0 %> min</p>
        <div id="nurse-tasks-morning" class="nurse-tasks" data-url="<%= sort_nurse_tasks_path(format: :js) %>">
          <%= render 'shared/nurse_task_cards', nurse_tasks: @incomplete_morning_tasks %>
        </div>
        </div>
        <div class="col-6 text-center">
          <p>Afternoon</p>
          <div id="nurse-tasks-afternoon" class="nurse-tasks" data-url="<%= sort_nurse_tasks_path(format: :js) %>">
            <%= render 'shared/nurse_task_cards', nurse_tasks: @incomplete_afternoon_tasks %>
          </div>
        </div>
      </div>
    </div>
      <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      <div class="row nurse-task-cards" id="completedTasks">
        <div class="col-6">
        <p>Morning</p>
          <div data-url="<%= sort_nurse_tasks_path(format: :js) %>">
            <%= render 'shared/nurse_task_cards', nurse_tasks: @completed_morning_tasks %>
          </div>
        </div>
        <div class="col-6">
          <p>Afternoon</p>
          <div data-url="<%= sort_nurse_tasks_path(format: :js) %>">
            <%= render 'shared/nurse_task_cards', nurse_tasks: @completed_afternoon_tasks %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
