<div class="main-container">
  <div class="row nurse-task-cards">
    <div class="col-6">
    <p>Morning</p>
      <div id="nurse-tasks-8" data-url="<%= sort_nurse_tasks_path(format: :json) %>">
          <% @nurse_tasks.where(slot: 8, completed: false).each do |nurse_task| %>
            <%= render 'shared/task_cards', patient: nurse_task.task_template.patient, nurse_task: nurse_task %>
          <% end %>
      </div>
    </div>
    <div class="col-6">
      <p>Afternoon</p>
      <div id="nurse-tasks-12" data-url="<%= sort_nurse_tasks_path(format: :json) %>">
          <% @nurse_tasks.where(slot: 12, completed: false).each do |nurse_task| %>
            <%= render 'shared/task_cards', patient: nurse_task.task_template.patient, nurse_task: nurse_task %>
          <% end %>
      </div>
    </div>
  </div>
  <hr>
  <p>Completed tasks</p>
  <div class="row nurse-task-cards" id="completedTasks">
    <div class="col-6">
    <p>Morning</p>
      <div id="nurse-tasks-8" data-url="<%= sort_nurse_tasks_path(format: :json) %>">
          <% @nurse_tasks.where(slot: 8, completed: true).each do |nurse_task| %>
            <%= render 'shared/task_cards', patient: nurse_task.task_template.patient, nurse_task: nurse_task %>
          <% end %>
      </div>
    </div>
    <div class="col-6">
      <p>Afternoon</p>
      <div id="nurse-tasks-12" data-url="<%= sort_nurse_tasks_path(format: :json) %>">
          <% @nurse_tasks.where(slot: 12, completed: true).each do |nurse_task| %>
            <%= render 'shared/task_cards', patient: nurse_task.task_template.patient, nurse_task: nurse_task %>
          <% end %>
      </div>
    </div>
  </div>
</div>
