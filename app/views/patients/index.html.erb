<div class="container-fluid mt-5 mb-n5 pt-3">
  <div class="patient-overview shadow row">
    <div class="col">
      <div class="row pt-3 pl-3">
        <div class="col">
          <h2> Hi <%= current_user.name %>, here's a quick look at your day!</h2>
        </div>
        <div class="col d-flex">
          <div class="col-2 text-center nurse-tasks-uncompleted p-3 mx-3 mb-3 shadow">
            <h5>Tasks</h5>
            <div id="task-progress" data-tasks="<%= ((current_user.nurse_tasks.where(completed: true).count.to_f / current_user.nurse_tasks.count))%>"></div>
          </div>
          <div class="col-2 offset-1 text-center nurse-patient-info p-3 mx-3 mb-3 shadow">
            <h5>Patients</h5>
            <div class="nurse-patient-severity d-flex">
              <h5 class="high-care"><%= @high_care_patients.count %></h5>
              <h5 class="medium-care"><%= @medium_care_patients.count %></h5>
              <h5 class="low-care"><%= @low_care_patients.count %></h5>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main-container">
  <div class="container-fluid">
    <div class="patient-cards row pl-5">
      <% @patients.each do |patient| %>
        <div class="patient-card col-xl-4-lg-12-md-12-s-12 mx-3 mt-3 shadow">
          <div class="row">
          <% if patient.severity == 'Low Care' %>
            <div class="patient-room-info low-care col-3">
          <% elsif patient.severity == 'Medium Care' %>
            <div class="patient-room-info medium-care col-3">
          <% elsif patient.severity == 'High Care' %>
            <div class="patient-room-info high-care col-3">
          <% end %>
              <h5 class="pt-4 pl-2 text-center"><i class="fa fa-university" aria-hidden="true"> <%= patient.room %></i></h5>
              <h5 class="pl-2 text-center"><i class="fa fa-bed" aria-hidden="true"> <%= patient.bed %></i></h5>
            </div>
            <div class="patient-info col-9">
              <div class="patient-info-header ml-n3 justify-content-center">
                <%= link_to patient_path(patient) do %>
                  <h3><%= patient.name %></h3>
                <% end %>
              </div>
              <div class="patient-info-body">
                <div class="d-flex">
                  <p class="col-7 pl-1 mb-1"><i class="fa fa-user-md" aria-hidden="true"></i><small> Dr. <%= patient.doctor.name %></small></p>
                  <p class="col-5 pl-1 pr-1 mb-1"><i class="fa fa-mobile" aria-hidden="true"></i><small> <%= patient.doctor.contact %></small> </p>
                </div>
              </div>
              <div class="patient-info-footer py-1">
                <div class="col-10 text-center">
                  <h6 class="mb-0"><%= patient.nurse_tasks.where(completed: false).count %> tasks left</h6>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
