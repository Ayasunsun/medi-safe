<%= render 'shared/banner', user: current_user, patients: @patients, nurses: [current_user] %>
<div class="main-container">
  <div class="container-fluid">
    <div class="patient-cards">
      <% @patients.each do |patient| %>
        <div class="patient-card col-xl-4-lg-4-md-6-s-6 shadow">
          <div class="d-flex">
          <% if patient.severity == 'Low Care' %>
            <div class="patient-room-info low-care col-3">
          <% elsif patient.severity == 'Medium Care' %>
            <div class="patient-room-info medium-care col-3">
          <% elsif patient.severity == 'High Care' %>
            <div class="patient-room-info high-care col-3">
          <% end %>
              <h5 class="pt-4 pl-2 text-center"><i class="fa fa-university" aria-hidden="true"> <%= patient.room %></i></h5>
              <h5 class="pl-2 text-center"><i class="fa fa-bed" aria-hidden="true"> <%= patient.bed %></i></h5>
            </div>
            <div class="patient-info col-9">
              <div class="patient-info-header ml-n3 justify-content-center">
                <%= link_to patient_path(patient) do %>
                  <h3><%= patient.name %></h3>
                <% end %>
              </div>
              <div class="patient-info-body">
                <div class="row">
                  <p class="col-7 pl-1 mb-1"><i class="fa fa-user-md" aria-hidden="true"></i><small> Dr. <%= patient.doctor.name %></small></p>
                  <p class="col-5 pl-1 pr-1 mb-1"><i class="fa fa-mobile" aria-hidden="true"></i><small> <%= patient.doctor.contact %></small> </p>
                </div>
              </div>
              <div class="patient-info-footer py-1">
                <div class="col-10 text-center">
                  <h6 class="mb-0"><%= patient.nurse_tasks.where(completed: false).count %> tasks left</h6>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="patient-cards-test pt-3">
      <% @patients.each do |patient| %>
        <div class="patient-card-test p-3 col shadow m-1">
          <div class="patient-info col">
            <div class="patient-info-header row">
              <div class="col">
                <div class="row justify-conten-between">
                  <%= link_to patient_path(patient), class: 'col-9 text-center' do %>
                    <h3><%= patient.name %></h3>
                  <% end %>
                  <div class="col-3">
                    <div class="row px-2">
                      <% if patient.severity == 'Low Care' %>
                        <div class="patient-room-info p-1 low-care-test text-center col">
                          <p>Low</p>
                      <% elsif patient.severity == 'Medium Care' %>
                        <div class="patient-room-info p-1 medium-care-test text-center col">
                          <p>Medium</p>
                      <% elsif patient.severity == 'High Care' %>
                        <div class="patient-room-info p-1 high-care-test text-center col">
                          <p>High</p>
                      <% end %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row justify-content-center">
                  <h5 class="pl-2 text-center"><i class="fa fa-university" aria-hidden="true"> <%= patient.room %></i></h5>
                  <h5 class="pl-2 text-center"><i class="fa fa-bed" aria-hidden="true"> <%= patient.bed %></i></h5>
                </div>
              </div>
            </div>

            <div class="patient-info-body">
              <div class="row justify-content-center">
                <div id="task-progress" data-tasks="<%= ((patient.nurse_tasks.where(completed: true).count.to_f / patient.nurse_tasks.count))%>"></div>
              </div>
              <div class="row">
                <p class="col-7 mb-1"><i class="fa fa-user-md" aria-hidden="true"></i><small> Dr. <%= patient.doctor.name %></small></p>
                <p class="col-5 pl-1 mb-1"><i class="fa fa-mobile" aria-hidden="true"></i><small> <%= patient.doctor.contact %></small> </p>
              </div>
          </div>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
