<div class="main-container">
  <div class="container">
    <div class="patient-cards row">
      <% @patients.each do |patient| %>
        <div class="patient-card col-xl-5-s-12 m-3 shadow">
          <div class="row">
            <div class="patient-room-info col-3">
              <h5 class="pt-5 pl-2"> Room: <small><%= patient.room %></small></h5>
              <h5 class="pl-2"> Bed: <small><%= patient.bed %></small></h5>
            </div>
            <div class="patient-info col-9">
              <div class="patient-info-header justify-content-center">
                <h2><%= patient.name %></h2>
                <p class="pl-3 align-self-end mb-3">(234156)</p>
              </div>
              <div class="patient-info-body">
                <div class="d-flex">
                  <p class="col-5 pl-1 pr-2 mb-1">Gender: <%= patient.gender %></p>
                  <p class="col-7 pl-1 mb-1 pl-0">Dr. <%= patient.doctor.name %></p>
                </div>
                <div class="d-flex">
                  <p class="col-5 pl-1 pr-1 mb-1">Age: <%= patient.age %></p>
                  <p class="col-7 pl-1 pr-1 mb-1">Contact: <%= patient.doctor.contact %></p>
                </div>
              </div>
              <div class="patient-info-footer pt-2">
                <div class="col">
                  <h5 class="mb-0">Tasks not completed: <%= patient.nurse_tasks.where(completed: false).count %></h5>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
