<div class="main-container">
  <div class="row">
    <div class="col-6">
      <div>
        <div>
          <p>Room:<%= @patient.room %></p>
          <p>Bed:<%= @patient.bed %></p>
        </div>
        <div>
          <h2>Name:<%= @patient.name %></h2>
          <p>(ID:<%= @patient.id %>)</p>
        </div>
      </div>

      <div>
        <h4><%= @doctor.name %></h4>
        <%= @doctor.contact %>
        <%= @patient.severity %>
      </div>

      <div>
        <% @tasktemplates.each do |template| %>
          <%= template.task.description %>
          <%= template.task.duration %>
          <%= template.frequency  %>
        <% end %>
      </div>
    </div>
    <div class="col-6">
      <ul class="nav nav-tabs pt-3" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="current-tasks" data-toggle="tab" href="#current-tasks" role="tab" aria-controls="home" aria-selected="true">Today's Tasks</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="old-tasks" data-toggle="tab" href="#old-tasks" role="tab" aria-controls="profile" aria-selected="false">Previous Tasks</a>
        </li>
      </ul>

      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="current-tasks" role="tabpanel" aria-labelledby="current-tasks-tab">
          <div class="task-cards-col">
            <% @current_tasks.each do |task| %>
              <%= render 'shared/task_cards', patient: @patient, nurse_task: task  %>
            <% end %>
          </div>
        </div>
        <div class="tab-pane fade" id="old-tasks" role="tabpanel" aria-labelledby="old-tasks-tab">
          <div class="task-cards-col">
            <% @yesterdays_tasks.each do |task| %>
              <%= render 'shared/task_cards', patient: @patient, nurse_task: task %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

