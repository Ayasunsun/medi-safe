<h1>UI Card Designs</h1>

<h2 class="py-3">Patient card</h2>

<div class="patient-cards">

  <div class="patient-card row shadow">
    <div class="patient-room-info">
      <h5> Room: <small>601</small></h5>
      <h5> Bed: <small>5</small></h5>
    </div>
    <div class="patient-info">
      <div class="patient-info-header d-flex justify-content-center">
        <h2>Patient Name</h2>
        <p class="pl-3 align-self-end mb-3">(234156)</p>
      </div>
      <div class="patient-info-body">
        <div class="d-flex">
          <p class="col-5 mb-1">Gender: Male</p>
          <p class="col-7 mb-1 pl-0">Dr. Name: Trouni</p>
        </div>
        <div class="d-flex">
          <p class="col-5 mb-1">Age: 87</p>
          <p class="col-7 mb-1 pl-0">Contact: 080 3356 1298</p>
        </div>
      </div>
      <div class="patient-info-footer pt-2">
        <div class="col">
          <h5 class="mb-0">Tasks not completed: </h5>
        </div>
      </div>
    </div>
  </div>

</div>

<h2 class="py-3">Task card</h2>

<div class="task-cards">

  <div class="task-card row shadow">
    <div class="task-patient-info">
      <h5>Patient Name</h5>
      <p class="mb-2"> Room: <small>601</small></p>
      <p class="mb-2"> Bed: <small>5</small></p>
    </div>
    <div class="task-info d-flex">
      <div class="task-info-description col-9 px-1">
        <p>Add your task description</p>
      </div>
      <div class="task-info-duration col-3 px-1">
        <p>30 Min</p>
      </div>
    </div>
  </div>

</div>
