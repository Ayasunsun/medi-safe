<div class="highlighted-task d-flex p-3">
  <div class="nurse-task-patient-name">
    <%= patient.name %>
  </div>
  <div class="nurse-task-patient-info">
    <i class="fa fa-university" aria-hidden="true"> <%= patient.room %></i>
    <i class="fa fa-bed" aria-hidden="true"> <%= patient.bed %></i>
  </div>
  <div class="nurse-task-info-description">
    <%= nurse_task.task_template.task.description %>
  </div>
  <div class="nurse-task-info-duration">
    <%= nurse_task.task_template.task.duration %> mins
  </div>
  <%= simple_form_for nurse_task do |f| %>
    <%= f.input :note %>
    <%= f.button :submit %>
  <% end %>
  <% if nurse_task.completed == false %>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal<%= nurse_task.id %>">
          Complete
        </button>
      <% end %>
      <!-- Modal -->
      <div class="modal fade" id="exampleModal<%= nurse_task.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Complete task</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              Are you sure you want to complete this task?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <%= link_to "Complete", complete_nurse_tasks_path(nurse_task), method: :patch, class: 'complete-btn btn btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
