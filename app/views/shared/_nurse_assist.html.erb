<!-- Button trigger modal -->
<div class="row justify-content-end">
<button id="assistence" type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
  Assist?
</button>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Assistence Mode</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you asking for assistence?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No! Thank's.</button>
        <%= link_to "Yes! Please", help_path, method: :post, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
