<%= render 'shared/banner', user: current_user, patients: @patients, nurses: [@user]  %>
<div class="main-container">
  <div class="container-fluid">
    <div class="nurse-details p-3 row">
      <div class="nurse-info col-2 text-center">
        <h3><%= @user.name %></h3>
        <%= image_tag "avatar.png", class: "avatar-mega-large" %>
      </div>
      <div class="patient-details col-10">
        <div class="row">
          <div class="patient-info">
            <%= @active_task.task_template.patient.name %>
            <i class="fa fa-university" aria-hidden="true"> <%= @active_task.task_template.patient.room %></i>
            <i class="fa fa-bed" aria-hidden="true"> <%= @active_task.task_template.patient.bed %></i>
          </div>
          <div class="task-info">
            <%= @active_task.task_template.patient.severity %>
            <%= @active_task.task_template.task.description %>
            <%= @active_task.task_template.task.duration %> mins
          </div>
        </div>
      </div>
    </div>
    <div class="row pt-3">
      <%= render 'shared/patient_cards', patients: @patients %>
    </div>
  </div>
</div>
